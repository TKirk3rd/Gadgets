   }

function roll2(ImageName, Param1, Param2)
   {
   GraphParam1 = Param1;
   GraphParam2 = Param2;
   document[ImageName].src = "http://charting.nasdaq.com/ext/charts.dll?" + GraphParam1 + CurrentTicker + GraphParam2;
